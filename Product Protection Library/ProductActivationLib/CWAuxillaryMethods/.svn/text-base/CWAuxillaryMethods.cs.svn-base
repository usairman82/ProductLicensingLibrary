using System;
using System.Collections.Generic;
using System.Text;

namespace CWAuxillaryMethods
{
	public class AUXMethods
	{
		/// <summary>
		/// Used to format the data into the same format used to generate the key in the first place.
		/// Used In Testing, It Is The Responsibility Of The Application Utilizing The Activation Componen
		/// To Provide The apropriate data.
		/// 
		/// </summary>
		/// <param name="sFirstName"></param>
		/// <param name="sLastName"></param>
		/// <param name="sPhoneNumber"></param>
		/// <param name="sEmail"></param>
		/// <returns></returns>
	    public String CodifyData(String sFirstName, String sLastName, String sPhoneNumber, String sEmail)
		{
			return (sFirstName+"-"+sLastName+"-"+sPhoneNumber+"-"+sEmail);
		}
	}
}
